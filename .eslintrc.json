{
  "root": true,
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": { "project": ["./tsconfig.json"] },
  "plugins": [
    "@typescript-eslint", "prettier", "jest"
  ],
  "rules": {
    "indent": ["error", 2],
    "no-constant-condition": 0
  },
  "ignorePatterns": []
}
